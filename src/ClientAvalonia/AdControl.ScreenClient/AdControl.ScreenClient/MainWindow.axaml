<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:screenClient="clr-namespace:AdControl.ScreenClient"
        xmlns:vlc="clr-namespace:LibVLCSharp.Avalonia;assembly=LibVLCSharp.Avalonia"
        x:DataType="screenClient:MainWindow"
        x:Class="AdControl.ScreenClient.MainWindow"
        Title="AdControl Screen Client"
        WindowState="FullScreen"
        SystemDecorations="None"
        Background="Black"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <!-- Видео -->
        <vlc:VideoView x:Name="VideoViewControl"
                       HorizontalAlignment="Stretch"
                       VerticalAlignment="Stretch"
                       IsVisible="False" />

        <!-- Изображение -->
        <Image x:Name="ImageControl"
               HorizontalAlignment="Stretch"
               VerticalAlignment="Stretch"
               Stretch="UniformToFill"
               IsVisible="True" />

        <!-- Таблица -->
        <DataGrid x:Name="JsonTable"
                  Margin="20"
                  IsReadOnly="True"
                  GridLinesVisibility="None"
                  BorderThickness="0"
                  AutoGenerateColumns="False"
                  RowHeight="50"
                  FontSize="20"
                  FontFamily="Segoe UI"
                  ColumnWidth="*"
                  HeadersVisibility="Column"
                  Background="#F5F7FA"
                  IsVisible="False" />

		<!-- Статус, код и QR (центр экрана, масштабируемо) -->
		<Viewbox Stretch="Uniform" MaxWidth="1400" MaxHeight="600"
				 HorizontalAlignment="Center" VerticalAlignment="Center">
			<StackPanel Orientation="Horizontal" Spacing="40" VerticalAlignment="Center" HorizontalAlignment="Center">
				<!-- Текстовая колонка (статус + код) -->
				<StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="12">
					<TextBlock x:Name="StatusText"
							   FontSize="48"
							   FontWeight="Bold"
							   Foreground="White"
							   TextAlignment="Center"/>

					<TextBlock x:Name="PairCodeText"
							   Text="000000"
							   FontSize="96"
							   FontWeight="Bold"
							   TextAlignment="Center"
							   VerticalAlignment="Center"
							   HorizontalAlignment="Center"
							   Classes="code-display" />
				</StackPanel>

				<!-- QR-код -->
				<Border Background="White" Padding="8" CornerRadius="8" VerticalAlignment="Center" HorizontalAlignment="Center">
					<Image x:Name="QrImage"
						   Width="300"
						   Height="300"
						   Stretch="Uniform"/>
				</Border>
			</StackPanel>
		</Viewbox>

	</Grid>
</Window>
